{
    ViewData["Title"] = "Brands";
}
@model List<Ecommerce.BrandVM>; 
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <h3 class="page-title">Tables</h3>
 
            <div class="row">             
                <div class="col-md-6" style="width: 100%;">
                    <!-- TABLE HOVER -->
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">Brands</h3>
                        </div>
                        <div class="dropdown" style="margin-top: -4rem;margin-left: 106rem;">
                            <a style="color: black"; href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-submenu lnr lnr-chevron-down"></i> <span></span><span>More Options</span> </a>
                            <ul class="dropdown-menu"style="position: absolute;top: 100%;left: -68px;text-align: left;">
                                <li>
                                    <a href="@Url.ActionLink("Create_Brand",controller:"Brands")"><i class="fa fa-plus-square"></i> Create New Brand </a>
                                </li>
                                <li>
                                    <a href="@Url.ActionLink("DeletedBrands",controller:"Brands")"><i class="fa lnr lnr-trash"></i> Trash </a>
                                </li>
                            </ul>
                        </div>                      
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Brand Image</th>
                                        <th>Brand Name</th>
                                        <th>Brand Description</th>
                                        <th>Creation Date</th>
                                        <th style="position: relative;left: -1rem;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var brand in Model)
                                    {
                                    <tr>
                                        <td>@brand.Id</td>
                                        <td><img class="fa-circle" style="height:50px;width:50px;border-radius:50%;" src="~/Imageuploads/Brands/@(brand.ImageId).png" /></td>
                                        <td>@brand.Name</td>
                                        <td>@brand.Description</td>
                                        <td>@brand.CreationDate</td>
                                        <td>
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-submenu fa fa-ellipsis-h"></i></a>
                                                <ul class="dropdown-menu" style="position: absolute;top: 100%;left: -68px;text-align: left;">
                                                    <li> <a href="#"><i class="lnr lnr-eye"></i>View</a></li>
                                                    <li> <a href="@Url.ActionLink("Edit_Brand",controller:"Brands",new { id=brand.Id })"><i class="lnr lnr-pencil"></i>Edit</a></li>
                                                    <li> <a href="@Url.ActionLink("Delete_Brand",controller:"Brands",new { id=brand.Id })"><i class="lnr lnr-trash"></i>Delete</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>}


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END TABLE HOVER -->
                </div>
            </div>
            
        </div>
    </div>
    <!-- END MAIN CONTENT -->
</div>
