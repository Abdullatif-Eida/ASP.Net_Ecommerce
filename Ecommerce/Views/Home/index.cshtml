@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Home Page";

@model Ecommerce.Vm.HomeVM;
}
<!-- Main Slider Start -->
<div class="header">
    <div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <nav class="navbar bg-light">
              

                <ul class="navbar-nav">
                    @foreach (var Category in Model.ListCategoryItems)
                    {
                    <li class="nav-item">
                        <a class="nav-link" 
                           href="@Url.ActionLink("GetItemByCategory", "Home", new {id=Category.Id})"><img style="width:24px;height:24px" src="~/Imageuploads/Categories/@(Category.ImageId).png" alt="Product Image"><span> - </span>@Category.Name</a>
                       
                    </li>
                    }
                </ul>
            </nav>
        </div>
       
        <div class="col-md-6">
            <div class="header-slider normal-slider">
                <div class="header-slider-item">
                    <img style="width: 42rem; height: 25rem;" src="~/assets/img/banner_1619658851edf92d0b3ccb5fede42e9ec83b6718c7.jpeg" alt="Slider Image" />
                   
                </div>
                <div class="header-slider-item">
                    <img style="width: 44rem; height: 25rem;" src="~/assets/img/banner_1620634691950f9879040432515ff98487b2dab2fc.jpeg" alt="Slider Image" />
                   
                </div>
                <div class="header-slider-item">
                    <img style="width: 44rem; height: 25rem;" src="~/assets/img/20-Off-Promo_June-2021_blog-banner.jpg" alt="Slider Image" />
                   
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="header-img">
                <div class="img-item">
                    <img src="~/assets/img/best_laptops_thumb800.jpg" alt="Slider Image" />
                    <a class="img-text" href="@Url.ActionLink("Shop", "Home")">
                        <p>You can buy your Dream Computer</p>
                    </a>
                </div>
                <div class="img-item">
                    <img src="~/assets/img/gsmarena_001.jpg" alt="Slider Image" />
                    <a class="img-text" href="@Url.ActionLink("Shop", "Home")">
                        <p>You can buy your Dream Phone</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
                </div>
</div>
<!-- Main Slider End -->
<!-- Brand Start -->
<div class="brand">
    <div class="container-fluid">
        <div class="brand-slider">
            @foreach (var Brands in Model.ListBrands)
            {
            <a href="@Url.ActionLink("GetItemByBrand", "Home", new {id=Brands.Id})"><div class="brand-item"><img class="fa-circle" style="height:90px;width:120px;" src="~/Imageuploads/Brands/@(Brands.ImageId).png" /></div></a>            }
        </div>
    </div>
</div>
<!-- Brand End -->
<!-- Feature Start-->
