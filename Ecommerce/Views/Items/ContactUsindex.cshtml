@{
    ViewData["Title"] = "Contact Us";
    ViewData["Active"] = true;
}

@using Ecommerce.Vm;
@model IEnumerable<Ecommerce.Vm.ContactUs>;
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <h3 class="page-title">
                <span style="color:darkslategrey">
                    @if (ViewBag.Title != null)
                    {
        @ViewBag.Title}
                </span>
            </h3>


            <div class="row">
                <div class="col-md-6" style="width: 100%;">
                    <!-- TABLE HOVER -->
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">Contact Us</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Person Name</th>
                                        <th>Person Email</th>
                                        <th>Message Subject</th>
                                        <th>Message</th>
                                        <th style="position: relative;left: 2rem;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Order in Model)
                                    {
                        <tr>
                            <td>@Order.FullName</td>
                            <td>@Order.Email</td>
                            <td>@Order.Subject</td>
                            <td>@Order.Message</td>
                        </tr>
}


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END TABLE HOVER -->
                </div>
            </div>

        </div>
    </div>
    <!-- END MAIN CONTENT -->
</div>
