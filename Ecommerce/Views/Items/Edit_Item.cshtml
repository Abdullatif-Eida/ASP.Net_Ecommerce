{
    ViewData["Title"] = "Create Category";
}

@model Ecommerce.ItemVM;
@using Ecommerce.Enum;
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <h3 class="page-title">Edit Item</h3>
            <div class="row">
                <div class="col-md-12">

                    <!-- INPUTS -->
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title"></i> Create New Item</h3>
                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <div class="panel-body">
                                <label> Name </label>
                                <input asp-for="Name" type="text" required="required" class="form-control" placeholder="Enter Brand Name">
                                <br>
                                <label> Categories Parent </label>
                                <select class="form-control" asp-items="@ViewBag.ListCategories" asp-for="CategoryId">
                                    <option selected="">select Category</option>
                                </select>
                                <br>
                                <label> Brands Parent </label>
                                <select class="form-control" asp-items="@ViewBag.ListBrands" asp-for="BrandId">
                                    <option selected="">select Brand</option>
                                </select>
                                <br>
                                <label> Color </label>
                                <select class="form-control" asp-items="@Html.GetEnumSelectList<Color>()" asp-for="Color">
                                    <option selected="">select Brand</option>
                                </select>
                                <br>
                                <label> Price </label>
                                <input asp-for="Price" type="number" required="required" class="form-control" placeholder="Enter Brand Name">
                                <br>
                                <label> Description </label>
                                <textarea asp-for="Description" class="form-control" required="required" placeholder="Enter Brand Description" rows="4"></textarea>
                                <br>
                                <label> Short Description </label>
                                <textarea asp-for="ShortDescription" class="form-control" required="required" placeholder="Enter Brand Description" rows="4"></textarea>
                                <br>
                                <label> Enter Category Images </label>
                                @if (Model.Images.Count > 0)
                                {
                                    foreach (var image in Model.Images)
                                    {
                                        <div>
                                        <div> <a href="@Url.ActionLink("DeleteImage","Items",new {id=image})">Delete</a>  </div>
                                        <img src="~/Imageuploads/Items/@(image).png" />
                                        </div>
                                    }
                                 }

                                <input name="files" multiple="multiple" type="file" class="" placeholder="Enter Brand Image">
                                <p class="demo-button" style="margin-top: 2rem;margin: 0 0 -31px;">
                                    <button type="submit" class="btn btn-outline-primary btn-toastr" data-context="info" data-message="Hi, I'm here" data-position="bottom-right">Edit Item</button>
                                </p>
                                <br />

                            </div>

                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->
</div>

