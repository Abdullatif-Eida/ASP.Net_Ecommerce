@{ Layout = "_UserLayout";
    ViewData["Title"] = "Login Success";

@model Ecommerce.Vm.RegisterVM;
}
<!-- Login Start -->
<h1 style="margin-top: 2rem; margin-bottom: 2rem; margin-left: 31rem;"> Login Your Account </h1>

<div class="alert alert-success alert-dismissible" role="alert" style="width:92%;margin-left: 4rem;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    Please Login
</div>
<div style="padding-top: 3px;" class="login">
    <form method="post">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="register-form">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Email">E-mail</label>
                                <input asp-for="Email" required="required" class="form-control" type="email" placeholder="E-mail">
                            </div>

                            <div class="col-md-6">
                                <label type="password" asp-for="Password">Password</label>
                                <input type="password" asp-for="Password" required="required" class="form-control" placeholder="Password">
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- Login End -->
